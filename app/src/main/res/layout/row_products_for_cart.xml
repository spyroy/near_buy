<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    tools:context=".storeFrag">

    <RelativeLayout
        android:id="@+id/shopDetails"
        android:layout_width="395dp"
        android:layout_height="128dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:layout_marginTop="5dp"
                android:text="product name"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:layout_marginTop="5dp"
                android:text="Price"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:layout_marginTop="5dp"
                android:text="Description"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/store_of_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:layout_marginTop="5dp"
                android:text="Store"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:background="@android:color/holo_green_light"
                android:text="on my Stock"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/remove_prod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:src="@drawable/ic_remove_prod" />

            <TextView
                android:id="@+id/Discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:layout_marginTop="5dp"
                android:text="Discount"
                android:textColor="@color/black" />

        </LinearLayout>


        <ImageView
            android:id="@+id/shop_im2"
            android:layout_width="56dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_shopping_cart_24" />
    </RelativeLayout>


