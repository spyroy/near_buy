<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".storeFrag"
    android:background="@null">

    <RelativeLayout
        android:id="@+id/shopDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:background="@null">
            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:text="Shop name"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shop_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:text="Shop phone"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:text="Shop Address"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:text="seller name"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@android:dimen/app_icon_size"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:background="@color/design_default_color_error"
                android:text="shop is closed"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:background="@color/black">

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/shop_im"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="366dp"
            android:layout_marginRight="366dp"
            android:src="@drawable/ic_baseline_store_24" />



    </RelativeLayout>


